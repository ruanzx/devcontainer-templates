{
    "id": "helm",
    "version": "3.16.2",
    "name": "Helm",
    "description": "The package manager for Kubernetes - helps you manage Kubernetes applications",
    "documentationURL": "https://helm.sh/docs/",
    "licenseURL": "https://github.com/helm/helm/blob/main/LICENSE",
    "keywords": [
        "kubernetes",
        "k8s",
        "helm",
        "package-manager",
        "charts",
        "devops"
    ],
    "options": {
        "version": {
            "type": "string",
            "description": "Version of Helm to install",
            "default": "3.16.1"
        },
        "installDashboard": {
            "type": "boolean",
            "description": "Install Helm Dashboard UI tool",
            "default": true
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
