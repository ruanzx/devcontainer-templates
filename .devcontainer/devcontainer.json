{
	"name": "DevContainer Features Development",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/ruanzx/features/kubectl:latest": {},
		"ghcr.io/ruanzx/features/devcontainers-cli:latest": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.vscode-json",
				"timonwong.shellcheck",
				"foxundermoon.shell-format"
			]
		}
	},
	"postCreateCommand": "chmod +x scripts/*.sh features/*/install.sh common/utils.sh devcontainer-features.sh;",
	"remoteUser": "root"
}