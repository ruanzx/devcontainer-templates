{
  "name": "Universal Development Environment - Base Image",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": false
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.autopep8",
        "ms-python.black-formatter",
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "ms-vscode.vscode-typescript-next",
        "golang.go",
        "rust-lang.rust-analyzer",
        "redhat.java",
        "bmewburn.vscode-intelephense-client",
        "rebornix.ruby",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "redhat.vscode-xml",
        "tamasfe.even-better-toml",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-azuretools.vscode-azurefunctions",
        "ms-azuretools.vscode-bicep",
        "amazonwebservices.aws-toolkit-vscode",
        "googlecloudtools.cloudcode",
        "hashicorp.terraform",
        "ms-vscode-remote.remote-containers",
        "eamodio.gitlens",
        "github.copilot",
        "github.copilot-chat",
        "editorconfig.editorconfig",
        "ms-vscode.makefile-tools",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit",
          "source.fixAll": "explicit"
        },
        "editor.rulers": [80, 120],
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "typescript.preferences.includePackageJsonAutoImports": "auto",
        "javascript.preferences.includePackageJsonAutoImports": "auto",
        "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
        "go.toolsManagement.autoUpdate": true,
        "go.useLanguageServer": true,
        "rust-analyzer.checkOnSave.command": "cargo clippy"
      }
    }
  },
  "forwardPorts": [3000, 4200, 5000, 5173, 8000, 8080, 8081, 9000],
  "portsAttributes": {
    "3000": {
      "label": "React Dev Server",
      "onAutoForward": "notify"
    },
    "4200": {
      "label": "Angular Dev Server", 
      "onAutoForward": "notify"
    },
    "5000": {
      "label": ".NET/Flask App",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "Django/FastAPI",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "echo 'üöÄ Universal DevContainer Ready!' && echo '' && echo 'üì¶ Available Languages & Tools:' && echo '  üêç Python: python3 --version' && echo '  üü¢ Node.js: node --version' && echo '  üî∑ .NET: dotnet --version' && echo '  üî∂ Go: go version' && echo '  ü¶Ä Rust: rustc --version' && echo '  ‚òï Java: java --version' && echo '  üêò PHP: php --version' && echo '  üíé Ruby: ruby --version' && echo '' && echo '‚òÅÔ∏è Cloud CLIs: aws --version | az --version | gcloud --version' && echo 'üê≥ Container Tools: docker --version | kubectl version --client' && echo 'üèóÔ∏è Infrastructure: terraform --version' && echo '' && echo 'üí° Ready for multi-language development!'",
  "remoteUser": "root"
}