{
  "name": "Kubernetes Outside Docker Example",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/ruanzx/features/kubectl:latest": {},
    "ghcr.io/ruanzx/features/kubernetes-outside-of-docker:latest": {}
  },
  "mounts": [
    {
      "source": "${localEnv:USERPROFILE}/.kube",
      "target": "/tmp/.kube",
      "type": "bind"
    }
  ],
  "postCreateCommand": [
    "echo 'ðŸš€ Testing Kubernetes connectivity from dev container...'",
    "kubectl version --client",
    "kubectl config current-context || echo 'No context set'",
    "echo 'ðŸ’¡ Try: kubectl get nodes'"
  ]
}
