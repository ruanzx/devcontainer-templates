{
  "name": "Security Development Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/ruanzx/features/gitleaks:8.21.1": {},
    "ghcr.io/ruanzx/features/yq:4.44.3": {},
    "ghcr.io/ruanzx/features/edit:1.2.0": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.vscode-yaml",
        "ms-vscode.vscode-json"
      ]
    }
  },
  "postCreateCommand": "gitleaks detect --verbose || echo 'Gitleaks scan complete'",
  "remoteUser": "root"
}
