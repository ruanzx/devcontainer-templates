{
  "name": "Terraform Development",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/ruanzx/features/terraform-docs:latest": {
      "version": "latest"
    },
    "ghcr.io/ruanzx/features/terraformer:latest": {
      "version": "latest"
    }
  },
  "postCreateCommand": "echo 'Terraform development container ready! terraform-docs installed and available.'",
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "ms-vscode.vscode-json"
      ]
    }
  },
  "remoteUser": "vscode"
}